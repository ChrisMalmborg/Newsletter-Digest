# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# IMAP Configuration (for fetching newsletters)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=your_email@example.com
IMAP_PASSWORD=your_imap_password_here

# SMTP Configuration (for sending digest)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_smtp_password_here

# Digest recipient
DIGEST_TO_ADDRESS=recipient@example.com

# Google OAuth (for web interface)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Web app session secret
SESSION_SECRET_KEY=change-me-to-a-random-string

# Secret for cron-triggered digest runs (Railway cron jobs)
CRON_SECRET=change-me-to-a-random-string

# Admin dashboard â€” the email address that can access /admin
ADMIN_EMAIL=your_admin_email@example.com
